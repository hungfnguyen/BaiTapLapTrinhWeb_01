package vn.iotstar.configs;

import java.sql.Connection;
import java.sql.DriverManager;

import com.mysql.cj.jdbc.DatabaseMetaData;

public class DBConnectSQLServer {
	private final String serverName = "localhost";
	private final String dbName = "laptrinhweb";
	private final String portNumber = "1433";
	private final String userID = "sa";
	private final String instance = "SQLEXPRESS";
	private final String password = "75591734";

	public Connection getConnection() {
		Connection conn = null;
		
		//+ ":" + portNumber
		try {
			String url = "jdbc:sqlserver://" + serverName + "\\" + instance + ";databaseName=" + dbName;
			if (instance == null || instance.trim().isEmpty()) {
				url = "jdbc:sqlserver://" + serverName  +";databaseName=" + dbName;
				
			}
			conn = DriverManager.getConnection(url, userID, password);
			
			if (conn != null) {
				DatabaseMetaData dm = (DatabaseMetaData) conn.getMetaData();
                System.out.println("Driver name: " + dm.getDriverName());
                System.out.println("Driver version: " + dm.getDriverVersion());
                System.out.println("Product name: " + dm.getDatabaseProductName());
                System.out.println("Product version: " + dm.getDatabaseProductVersion());
                
                return conn;
			}
		} catch (Exception e) {
			// TODO: handle exception
			e.printStackTrace();
		}
		return null;
	}
		
	public static void main(String[] args) {
		try {
			System.out.println(new DBConnectSQLServer().getConnection());
		} catch (Exception e) {
			// TODO: handle exception
			e.printStackTrace();
		}
	}

}
